<?xml version="1.0" encoding="UTF-8"?>
<included>
    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>

    <appender name="applikasjonslogg" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="net.logstash.logback.encoder.LogstashEncoder">
            <throwableConverter class="net.logstash.logback.stacktrace.ShortenedThrowableConverter">
                <maxDepthPerThrowable>30</maxDepthPerThrowable>
                <exclude>java\.util\.concurrent\..*</exclude>
                <exclude>org\.apache\.tomcat\..*</exclude>
                <exclude>org\.apache\.coyote\..*</exclude>
                <exclude>org\.apache\.catalina\..*</exclude>
                <exclude>org\.springframework\.web\..*</exclude>
                <exclude>sun\.net\.www\..*</exclude>
            </throwableConverter>
        </encoder>
    </appender>

    <appender name="secureLog" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>/secure-logs/secure.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
            <fileNamePattern>/secure-logs/secure.log.%i</fileNamePattern>
            <minIndex>1</minIndex>
            <maxIndex>1</maxIndex>
        </rollingPolicy>
        <triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
            <maxFileSize>50MB</maxFileSize>
        </triggeringPolicy>
        <encoder class="net.logstash.logback.encoder.LogstashEncoder"/>
    </appender>

    <root level="WARN">
        <appender-ref ref="applikasjonslogg"/>
    </root>

    <logger name="no.nav.doknotifikasjon" level="INFO" additivity="false">
        <appender-ref ref="applikasjonslogg"/>
    </logger>

    <!-- Remove noise due to wrong use of AddressingFeature -->
    <logger name="org.apache.cxf.ws.addressing.ContextUtils" additivity="false" level="ERROR">
        <appender-ref ref="applikasjonslogg"/>
    </logger>
    <logger name="org.apache.cxf.ws.addressing.soap.MAPCodec" additivity="false" level="ERROR">
        <appender-ref ref="applikasjonslogg"/>
    </logger>

    <logger name="secureLog" level="DEBUG" additivity="false">
        <appender-ref ref="secureLog"/>
    </logger>
    <logger name="org.apache.cxf.services" level="INFO" additivity="false">
        <appender-ref ref="secureLog"/>
    </logger>
</included>