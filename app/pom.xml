    <artifactId>app</artifactId>
    <packaging>jar</packaging>

    <dependencies>
        <dependency>
            <groupId>no.nav.doknotifikasjon</groupId>
            <artifactId>core</artifactId>
        </dependency>
        <dependency>
            <groupId>no.nav.doknotifikasjon</groupId>
            <artifactId>knot001</artifactId>
        </dependency>
        <dependency>
